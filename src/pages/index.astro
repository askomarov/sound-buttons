---
import MainLayout from '@layouts/Main/Main';
import Button from '@components/Button/Button';
---

<MainLayout title="Главная" description="Описание">
  <section>
    <div class="list container">
      <Button
        text="Овации и свист 👏🏻😗"
        className="bg-blue-900 bg-1"
        data-sound="/assets/applause-wistle.mp3"
      />
      <Button
        text="Овации 👏🏻"
        className="bg-blue-900"
        data-sound="/assets/applause.mp3"
      />
      <Button
        text="Смех толпы 😄😄😄"
        className="bg-2"
        data-sound="/assets/crowd-laugth.mp3"
      />
      <Button text="Вздох 😱" data-sound="/assets/gasp.mp3" />
      <Button
        text="Цссссс! 🤫"
        className="bg-3"
        data-sound="/assets/silence.mp3"
      />
      <Button
        text="Сухой пук 💩"
        className="bg-amber-700"
        data-sound="/assets/fart-dry.mp3"
      />
    </div>
  </section>
</MainLayout>

<style>
  @property --rotate {
    inherits: false;
    initial-value: 0deg;
    syntax: '<angle>';
  }
  .list {
    @apply p-4 flex flex-wrap gap-4;

    .button {
      @apply relative flex-auto items-center justify-center min-h-[25vh] rounded-lg shadow-sm;

      &:active {
        animation: spin 2s linear;
      }
    }
  }
  .bg-1 {
    background: repeating-conic-gradient(
      from 45deg at 15% 15%,
      #62364e 0 10deg,
      #d03453 10deg 20deg,
      #ffad66 20deg 30deg,
      #ff8251 30deg 40deg,
      #f35558 40deg 50deg
    );
  }
  .bg-2 {
    --rotate: -45deg;
    background: repeating-linear-gradient(
      var(--rotate, 45deg),
      #8391ea,
      #8391ea 10px,
      #616ebc 10px,
      #616ebc 20px
    );
  }

  .bg-3 {
    --rotate: 10deg;
    background-image: repeating-linear-gradient(
      var(--rotate, 10deg),
      #ffd393,
      #ffd393 5px,
      #ff974f 5px,
      #ff974f 20px,
      #f54f29 20px,
      #f54f29 22px
    );
  }
  @keyframes spin {
    to {
      --rotate: 360deg;
    }
  }
</style>
